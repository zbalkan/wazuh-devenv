    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run all tests",
            "type": "debugpy",
            "request": "launch",
            "program": "src/tester.py",
            "console": "integratedTerminal",
        },
        {
            "name": "Disable built-in",
            "type": "debugpy",
            "request": "launch",
            "program": "src/tester.py",
            "console": "integratedTerminal",
            "args": [
                "--disable-builtin"
            ]
        },
        {
            "name": "Disable custom",
            "type": "debugpy",
            "request": "launch",
            "program": "src/tester.py",
            "console": "integratedTerminal",
            "args": [
                "--disable-builtin"
            ]
        },
        {
            "name": "Disable behavioral",
            "type": "debugpy",
            "request": "launch",
            "program": "src/tester.py",
            "console": "integratedTerminal",
            "args": [
                "--disable-behavioral"
            ]
        },
        {
            "name": "Preflight + behavioral",
            "type": "debugpy",
            "request": "launch",
            "program": "src/tester.py",
            "console": "integratedTerminal",
            "args": [
                "--disable-builtin",
                "--disable-custom"
            ]
        },
        {
            "name": "Preflight + custom",
            "type": "debugpy",
            "request": "launch",
            "program": "src/tester.py",
            "console": "integratedTerminal",
            "args": [
                "--disable-behavioral",
                "--disable-builtin"
            ]
        },
        {
            "name": "Only preflight",
            "type": "debugpy",
            "request": "launch",
            "program": "src/tester.py",
            "console": "integratedTerminal",
            "args": [
                "--disable-behavioral",
                "--disable-builtin",
                "--disable-custom"
            ]
        },
        {
            "name": "Help",
            "type": "debugpy",
            "request": "launch",
            "program": "src/tester.py",
            "console": "integratedTerminal",
            "args": [
                "-h"
            ]
        },
        {
            "name": "Coverage",
            "type": "debugpy",
            "request": "launch",
            "program": "src/coverage.py",
            "console": "integratedTerminal"
        }
    ]
}